    class [element.getInterfaceName()/];[/for]

    class [anEPackage.getInterfaceName()/];
}

[comment namespace /]
namespace [namespaceName/] 
{
    class [anEPackage.name.toUpper()/]_API [className/] : public virtual [getShortQualifiedName('ecore::EFactory',namespaceName)/] 
