import {[interfaceExtend/]} from [getImport(interfaceExtend)/]
[/for]
[for ( referenceType : EClassifier | aClass.getReferencedTypes() )]
[let referenceImport : String = referenceType.getImport()]
[let referenceName : String = referenceType.getType()]
[if referenceName <> interfaceName and referenceImport <> '']
import {[referenceType.getType()/]} from [referenceImport/]
[/if]
[/let]
[/let]
[/for]

export interface [interfaceName/][for ( extend : String | interfaceExtends ) before (' extends ') separator (', ')][extend/][/for]
